@model WebApplication31.Models.notUser

@{
    ViewBag.Title = "changePassword";
}

<h2>changePassword</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <label for="oldPassword" class="control-label col-md-2">Old Password</label>
            <div class="col-md-10">
                <input name="oldPassword" type="password" id="oldPassword" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="newPassword" class="control-label col-md-2">New Password</label>
            <div class="col-md-10">
                <input name="newPassword" type="password" id="newPassword" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="confirmNewPassword" class="control-label col-md-2">Confirm New Password</label>
            <div class="col-md-10">
                <input name="confirmNewPassword" type="password" id="confirmNewPassword" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
